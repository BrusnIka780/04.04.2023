<Window x:Class="IncreasingSequenceCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Increasing Sequence Check" Height="250" Width="350">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите последовательность чисел через пробел:" />
            <TextBox x:Name="sequenceTextBox" Width="200" Margin="0 10" />
            <Button Content="Проверить" Click="CheckButton_Click" />
            <Label x:Name="resultLabel" Content="" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>